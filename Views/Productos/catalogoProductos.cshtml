@model List<compraOnlineWEB.Models.ViewModel.listProductoViewModel>
@{
    ViewBag.Title = "catalogoProductos";
    Layout = "~/Views/Shared/_LayoutProductos.cshtml";
    
}


<b>PRODUCTOS</b>
<div class="row">




    <hr />
    
    @foreach (var oElemento in Model)
    {

        <div class="col-sm-6 col-md-4 ">
            <div class="thumbnail">

                <img src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(oElemento.ImgProducto))" width=200px /> <br />
                <div class="caption">
                    <h3>@oElemento.Nombre</h3>
                    <p>@oElemento.Descripcion</p>
                    <p>Q.@oElemento.Precio</p>
                    <p>
                        <button type="button" class="btn btn-default btn-lg" onclick="jsGo(@oElemento.Id_Producto)">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                            Comprar
                        </button>
                    </p>
                </div>

            </div>
        </div>

    }
    <hr />




</div>

<script>
    function jsGo(idProducto) {
        document.location.href = "@Url.Content("~/Productos/Carrito/")" + "?id=" + idProducto;
        return false;
    }
</script>
